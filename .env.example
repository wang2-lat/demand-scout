# Anthropic API (自定义端点)
ANTHROPIC_API_KEY=sk-your-key-here
ANTHROPIC_BASE_URL=https://api.achat.cc.cd/

# Reddit (采集只需 User-Agent，推广需要用户名密码)
REDDIT_USER_AGENT=DemandScout/1.0
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# Database
DATABASE_URL=sqlite:///./demand_scout.db

# GitHub (用于自动发布)
GITHUB_USERNAME=your_github_username
GITHUB_TOKEN=ghp_your_token_here

# AutoPilot 配置
AUTOPILOT_WORKSPACE=./autopilot_workspace
AUTOPILOT_CHECK_INTERVAL=3600  # 每小时检查一次
AUTOPILOT_MIN_SCORE=50.0  # 最低需求评分
AUTOPILOT_MAX_PER_DAY=3  # 每天最多开发几个项目
